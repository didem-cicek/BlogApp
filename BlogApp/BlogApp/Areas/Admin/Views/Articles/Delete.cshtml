@inject IViewLocalizer localizer 
@model BlogApp.Models.Article
<div class="nk-content ">
                    <div class="container-fluid">
                        <div class="nk-content-inner">
                            <div class="nk-content-body">
                                <div class="components-preview wide-md mx-auto">
                                    <div class="nk-block-head nk-block-head-lg wide-sm">
                                        <div class="nk-block-head-content">
                                            <div class="nk-block-head-sub"><a class="back-to" asp-action="index"><em class="icon ni ni-arrow-left"></em><span>Geri Dön</span></a></div>
                                        </div>
                                    </div>
                                    <div class="nk-block nk-block-lg">
                                        <div class="nk-block-head">
                                            <div class="nk-block-head-content">
                                                <h4 class="title nk-block-title">@localizer["Makale Düzenle"]</h4>
                                            </div>
                                        </div>
                                         <div class="nk-block-head">
                                            <div class="nk-block-head-content">
                                                <h4 class="title nk-block-title">@localizer["Bu makaleyi silmek istediğinizi emin misiniz?"]</h4>
                                            </div>
                                        </div>
                                        <div class="row g-gs">
                                            <div class="col-lg-12">
                                                <div class="card h-100">
                                                    <div class="card-inner">
                                                        <form action="Delete">
                                                            <div class="form-group">
                                                                @Html.DisplayNameFor(model => model.Title)
                                                                <div class="form-control-wrap">
                                                                    @Html.DisplayFor(model => model.Title)
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.DisplayNameFor(model => model.SlugUri)
                                                                <div class="form-control-wrap">
                                                                    @Html.DisplayFor(model => model.SlugUri)
                                                                </div>
                                                            </div>
                                                             <div class="form-group">
                                                                @Html.DisplayNameFor(model => model.AuthorName)
                                                                <div class="form-control-wrap">
                                                                    @Html.DisplayFor(model => model.AuthorName)
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.DisplayNameFor(model => model.Body)
                                                                <div class="form-control-wrap">
                                                                    @Html.DisplayFor(model => model.Body)
                                                                </div>
                                                            </div>
                     
                                                             <input type="hidden" asp-for="Id">
                                                           <div class="form-group">
                                                                <button type="submit" value="Delete" class="btn btn-lg btn-primary">@localizer["Sil"]</button>
                                                            </div>
                                                            
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                                
                                            </div>
                                        </div>
                                    </div><!-- .nk-block -->
                                   
                                    </div><!-- .nk-block -->
                                        
                                        </div>
                                        
                                        </div><!-- card -->
                                    </div><!-- .nk-block -->