@model List<MosaicGridBlogListViewModel>

<div class="container-fluid paddding mb-5">
    <div class="row mx-0">
        @foreach (MosaicGridBlogListViewModel f in Model){
                 <div class="col-md-6 col-12 paddding animate-box" data-animate-effect="fadeIn">
                    <div class="fh5co_suceefh5co_height">
                            <img src="@Url.Content(f.PictureURL)" alt="@f.Title"/>
                            <div class="fh5co_suceefh5co_height_position_absolute"></div>
                            <div class="fh5co_suceefh5co_height_position_absolute_font">
                            <div class=""><a asp-controller="blog" asp-action="single"  asp-route-slugUri = "@f.SlugUri" class="color_fff"> <i class="fa fa-clock-o"></i>&nbsp;&nbsp;@f.PublishDate.ToShortDateString()
                            </a></div>
                            <div class=""><a asp-controller="blog" asp-action="single"  asp-route-slugUri = "@f.SlugUri" class="fh5co_good_font"> @f.Title </a></div>
                        </div>
                    </div>
                </div>
                break;
            }

        <div class="col-md-6">
            <div class="row">
            @foreach (MosaicGridBlogListViewModel m in Model){
            
                <div class="col-md-6 col-6 paddding animate-box" data-animate-effect="fadeIn">
                    <div class="fh5co_suceefh5co_height_2"><img src="@Url.Content(m.PictureURL)" alt="@m.Title"/>
                        <div class="fh5co_suceefh5co_height_position_absolute"></div>
                        <div class="fh5co_suceefh5co_height_position_absolute_font_2">
                            <div class=""><a href="#" class="color_fff"> <i class="fa fa-clock-o"></i>&nbsp;&nbsp;@m.PublishDate.ToShortDateString() </a></div>
                            <div class=""><a asp-controller="blog" asp-action="single"  asp-route-slugUri = "@m.SlugUri" class="fh5co_good_font_2"> @m.Title </a></div>
                        </div>
                    </div>
                </div>
            
            }
            </div>
        </div>
    </div>
</div>